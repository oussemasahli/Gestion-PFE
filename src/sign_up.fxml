<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="323.0" prefWidth="540.0" stylesheets="@styles/sign_up.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignUpController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px;" text="Creer un compte">
         <font>
            <Font size="20.0" />
         </font></Label>

        <Label layoutX="20.0" layoutY="60.0" text="Nom :" />
        <TextField fx:id="nameField" layoutX="243.0" layoutY="55.0" />

        <Label layoutX="20.0" layoutY="100.0" text="Email :" />
        <TextField fx:id="emailField" layoutX="243.0" layoutY="95.0" />

        <Label layoutX="20.0" layoutY="140.0" text="Mot de passe :" />
        <PasswordField fx:id="passwordField" layoutX="244.0" layoutY="135.0" />

        <Label layoutX="20.0" layoutY="180.0" text="Confirmer le mot de passe :" />
        <PasswordField fx:id="confirmPasswordField" layoutX="245.0" layoutY="176.0" />

        <Button fx:id="signUpButton" layoutX="81.0" layoutY="255.0" onAction="#handleSignUp" text="S'inscrire" />
        <Button fx:id="backButton" layoutX="296.0" layoutY="255.0" onAction="#handleBack" text="Retour" />
    </children>
</AnchorPane>
