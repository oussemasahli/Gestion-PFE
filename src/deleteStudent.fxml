<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DeleteStudentController" stylesheets="styles/deleteStudent.css">
    <center>
        <VBox spacing="15" style="-fx-padding: 20;" alignment="CENTER">
            <Label text="Supprimer un etudiant" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <TextField fx:id="cinField" promptText="CIN (Obligatoire)" />
            <Button text="Supprimer" onAction="#handleDeleteStudent"  />
            <Button text="Annuler" onAction="#handleCancel"  />
        </VBox>
    </center>
</BorderPane>